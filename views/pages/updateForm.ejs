

<%- include('../partials/headcss.ejs') %>

<body>


  <%- include('../partials/navbar.ejs') %>

  <div class="pgdetails">
    <form method="POST" action="/updateData">

      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="owner">PG Name</label>
          <input type="text" class="form-control" name="pgName" placeholder="Enter Name" >
        </div>
        
        
      </div>
      




      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="owner">Owner's Name</label>
          <input type="text" class="form-control" name="owner" placeholder="Enter Name" required>
        </div>
        <div class="form-group col-md-6">
          <label for="pNumber">Owner's Number</label>
          <input type="number" class="form-control" name="pNumber" placeholder="Phone Number" required>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">

        <label for="address1">Address</label>
        <input type="text" class="form-control" name="address" placeholder="House Number, Street Name, Landmark.." required>
      </div>

      </div>
      
      
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="rooms">Number of Rooms Available</label>
          <input type="number" class="form-control" name="rooms" required>
        </div>
        <div class="form-group col-md-3">
          <label for="kitchen">kitchen Available</label>
          <select name="kitchen" class="form-control" required>
            <option selected>No</option>
            <option>Yes</option>
          </select>
        </div>
        <div class="form-group col-md-3">
          <label for="mess">Mess Available</label>
          <select name="mess" class="form-control" required>
            <option>Yes</option>
            <option selected>No</option>
          </select>
        </div>
        <div class="form-group col-md-3">
          <label for="rent">Monthly Rent</label>
          <input type="number" class="form-control" name="rent" required>
        </div>
      </div>
      <div class="form-row">
        
        <div class="form-group col-md-12">
          <label for="description">Description About Place</label>
          <input type="text" class="form-control" name="description" placeholder="Important features or facilities..." required>
        </div>
      </div>

      <center><button type="submit" class="btn btn-primary" style="margin-top: 1%; width: 8%; height: 4%;">Update..</button></center>
    </form>
  </div>



  <%- include('../partials/footer.ejs') %>


</body>

</html>