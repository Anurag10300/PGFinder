<body>



<h1 class="display-3 home"> <a href="/home"> Home</a></h1>
  <h1 class="display-3 logout "> <a href="/logout">Logout</a> </h1>

<div class="jumbotron text-center">
  
  <h1 class="display-3 findpg "> FINDPG</h1>
  <p class="lead k"></p>
  <form align="center" action="/search" method="GET">
    <button type="submit" class="btn btn-outline-dark">Search Options</button>
  </form>
</div>  


<form action="/home" method="POST">
  <button class="btn btn-light btn-lg btn-block addPG"> Add PG...</button>
</form>

	 
	 <div class="container">
      <div class="row justify-content-around">

        <% for(var i=Usert.length-1  ; i>=0 ; i--){ %>

        <%  if((Usert[i].pgName == name) && (Usert[i].rooms >= rooms) && (Usert[i].mess == mess) && (Usert[i].rent <= rent) && ((Usert[i].address1 == address) || (Usert[i].address2 == address))) { %>
        


             <div class="col-lg-4">
             <div class="card gg" style="width: 24rem;">
                <img src="https://images.unsplash.com/photo-1651488402810-d15203c56df3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=807&q=80" class="card-img-top" alt="...">
                 <div class="card-body">
                    <h4 class="card-title">

                PG Name : <%= Usert[i].pgName  %>
                </h4>
                <h4 class="card-title">

                  Owner Name : <%= Usert[i].ownerName %>
                  </h4>
                  <h4 class="card-title">

                    Owner Number : <%= Usert[i].ownerNumber %>
                    </h4>
                    <h4 class="card-title">

                      Rooms Available : <%= Usert[i].rooms %>
                      </h4>
                      <h4 class="card-title">

                        Mess Present : <%= Usert[i].mess %>
                        </h4>
                        <h4 class="card-title">

                        Monthly Rent : <%= Usert[i].rent %>
                          </h4>
                          <h4 class="card-title">

                            Address : <%= Usert[i].address1 %>
                              </h4>
                
            
             </div>
             <!--<a href="#" class="btn btn-primary">Expand</a>-->
          </div>
        </div>


        <% }  %>
       
        <% } %>
	
    

    
</div>
</div>
